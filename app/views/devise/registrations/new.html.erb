<div class="auth-page">
  <div class="auth-card">
    <div class="auth-card__header">
      <p class="auth-card__kicker">Cadastro</p>
      <h2 class="auth-card__title">Criar conta</h2>
      <p class="auth-card__subtitle">Preencha seus dados para acessar o calendario.</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-card__form", data: { controller: "password-toggle" } }) do |f| %>
      <%= f.error_notification class: "alert alert-warning",
                               data: { controller: "flash", flash_timeout_value: 8000 } %>

      <div class="form-inputs">
        <%= f.input :first_name, label: "Nome", required: true, input_html: { autocomplete: "given-name" } %>
        <%= f.input :last_name, label: "Sobrenome", required: true, input_html: { autocomplete: "family-name" } %>
        <%= f.input :email,
                    label: "Email",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.label :role, "Perfil" %>
        <%= f.select :role,
            [["Escritório", "escritorio"],
             ["Gerentes", "gerentes"],
             ["Segurança", "seguranca"],
             ["Admin", "admin"]],
            {}, class: "form-control" %>
        <%= f.input :password,
                    label: "Senha",
                    required: true,
                    hint: ("#{@minimum_password_length} caracteres no minimo" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", data: { "password-toggle-target": "input" } } %>
        <%= f.input :password_confirmation,
                    label: "Confirmar senha",
                    required: true,
                    input_html: { autocomplete: "new-password", data: { "password-toggle-target": "input" } } %>
        <div class="auth-card__toggle">
          <label>
            <input type="checkbox" data-action="password-toggle#toggle">
            Mostrar senha
          </label>
        </div>
      </div>

      <div class="auth-card__actions auth-card__actions--row">
        <%= f.button :submit, "Criar conta", class: "auth-card__button" %>
        <%= link_to "Entrar", new_session_path(resource_name), class: "auth-card__button auth-card__button--ghost" %>
      </div>
    <% end %>

    <div class="auth-card__links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
