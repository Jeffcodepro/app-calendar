<div class="auth-links">
  <div class="auth-links__secondary">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Esqueci a senha", new_password_path(resource_name), class: "auth-links__text" %>
    <% end %>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Nao recebeu instrucoes de confirmacao?", new_confirmation_path(resource_name), class: "auth-links__text" %>
    <% end %>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Nao recebeu instrucoes de desbloqueio?", new_unlock_path(resource_name), class: "auth-links__text" %>
    <% end %>
  </div>

  <%- if devise_mapping.omniauthable? %>
    <div class="auth-links__providers">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "auth-links__button" %>
      <% end %>
    </div>
  <% end %>
</div>
