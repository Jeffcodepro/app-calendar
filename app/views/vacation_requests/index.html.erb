<div class="container py-4">
  <h1 class="mb-3">Minhas solicitações de férias</h1>

  <% if @vacation_requests.any? %>
    <div class="table-responsive">
      <table class="table table-striped align-middle">
        <thead>
          <tr>
            <th>Período</th>
            <th>Status</th>
            <th class="text-end">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @vacation_requests.each do |request| %>
            <tr>
              <td><%= request.period_label %></td>
              <td><span class="badge bg-secondary text-uppercase"><%= request.status_label %></span></td>
              <td class="text-end">
                <% if request.pending? %>
                  <%= link_to "Cancelar", cancel_vacation_request_path(request), data: { turbo_method: :patch }, class: "btn btn-sm btn-outline-secondary" %>
                <% end %>
                <%= link_to "Excluir", vacation_request_path(request), data: { turbo_method: :delete }, class: "btn btn-sm btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p>Nenhuma solicitação ainda.</p>
  <% end %>
</div>
